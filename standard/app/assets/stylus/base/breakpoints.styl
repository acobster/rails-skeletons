/*
 * Breakpoints
 */

$breakpoint-med = "only screen and (min-width: 768px) and (max-width: 819px)"
$breakpoint-sm = "only screen and (min-width: 530px) and (max-width: 767px)"
$breakpoint-xs = "only screen and (max-width: 529px)"

medium()
  @media $breakpoint-med
    {block}

small()
  @media $breakpoint-sm
    {block}

xsmall()
  @media $breakpoint-xs
    {block}

